<header>
                <nav id="menu">
                        <ul>
                            <li><%= link_to "Manipulating Time", root_path %></li>
                            <li><%= link_to "About Us", about_us_path %></li>
                            <li><%= link_to "Idea", idea_path %></li>
                        </ul>
                </nav>

                <div id="authentication">
                    <% if signed_in? %>
                        <%= link_to "#{@current_user.name}", current_user, class:'user'  %>
                        <a href="#" class="notifications"><%= image_tag('notifications.png') %></a>  
                    <% else %>
                        <%= link_to "Log In", login_path, class:'login'  %>
                        <%= link_to "Sign Up", signup_path, class:'signup'  %> 
                    <% end %>
                </div>
        </header>
        <div style="clear:both"></div>

        <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>