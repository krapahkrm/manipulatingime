<% provide(:title, "Login") %>
<%= render 'layouts/header' %> 

<section id="content">
    <h1>Sign in</h1>
    	<%=form_for(:session, url: sessions_path) do |f| %>
    		<div>
    		<%= f.label :email, "Email" %>
    		<%= f.text_field :email, :class => "not_enter"%>
    		</div>
    		<div>
    		<%= f.label :password, "Password" %>
    		<%= f.password_field :password,:class => "not_enter" %>
    		</div>
    		<div>
    		<%= f.submit "Sign in" %>
    		</div>
		<% end %>
		<p> New user? <%= link_to "Sign up now!", signup_path %></p>
    </section>

    <footer>
        <p>Manipulating Time &copy; 2016</p>
    </footer>